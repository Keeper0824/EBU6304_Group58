<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.consumptionmanager.controllers.MainController"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-background-color: transparent;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- 标题 -->
    <Label text="消费信息管理系统"
           style="-fx-font-size: 28px; -fx-text-fill: black; -fx-font-weight: bold;" />

    <!-- 按钮区 -->
    <HBox spacing="20" alignment="CENTER"
          style="-fx-background-color: rgba(255,255,255,0.8); -fx-background-radius: 12; -fx-padding: 20;">
        <Button text="添加消费" onAction="#handleAddConsumption"
                style="-fx-font-size: 16px; -fx-pref-width: 140px; -fx-pref-height: 45px;"/>
        <Button text="编辑消费" onAction="#handleEditConsumption"
                style="-fx-font-size: 16px; -fx-pref-width: 140px; -fx-pref-height: 45px;"/>
    </HBox>

    <!-- 表格区 -->
    <TableView fx:id="consumptionTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 12; -fx-padding: 20;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
            <TableColumn fx:id="nameColumn" text="消费名称" prefWidth="300"/>
            <TableColumn fx:id="amountColumn" text="消费金额" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
