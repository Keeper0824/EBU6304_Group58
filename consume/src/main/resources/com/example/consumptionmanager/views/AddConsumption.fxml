<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.consumptionmanager.controllers.AddConsumptionController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="消费名称:"/>
    <TextField fx:id="nameField"/>

    <Label text="消费金额:"/>
    <TextField fx:id="amountField"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="添加" onAction="#handleAdd"/>
        <Button text="取消" onAction="#handleCancel"/>
    </HBox>
</VBox>