<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="src.main.java.Query_story4_13.UserSearchController"
      alignment="CENTER"
      prefWidth="1600"
      prefHeight="900"
      spacing="20">


    <!-- 大标题 -->

    <Label text="AI-Empowered Personal Finance Tracker" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #3a4a6d; -fx-padding: 0 0 40 0;"/>
    <Label text="User Querader" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #3a4a6d; -fx-padding: 0 0 350 0;"/>

    <HBox spacing="20" alignment="CENTER">
        <TextField fx:id="searchField"
                   promptText="Enter ID or nickname"
                   prefHeight="40"
                   prefWidth="400"
                   style="-fx-font-size: 18;" />
        <Button text="Search"
                onAction="#handleSearch"
                prefHeight="40"
                style="-fx-font-size: 18;" />
    </HBox>



</VBox>