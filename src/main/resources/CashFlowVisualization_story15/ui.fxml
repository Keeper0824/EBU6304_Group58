<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="src.main.java.CashFlowVisualization_story15.CashFlowController"
            prefWidth="1200" prefHeight="590">

    <!-- 2. 内部真正放摘要 + 图表的容器，留一点内边距 -->
    <VBox fx:id="graphsContainer"
          spacing="30"
          AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          style="-fx-padding: 20 0 0 0;">

        <!-- 摘要行，三个面板等分宽度 -->
        <HBox spacing="30" alignment="CENTER">
            <StackPane HBox.hgrow="ALWAYS" prefHeight="80"
                       style="-fx-background-color: #fafafa; -fx-background-radius: 8;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="INCOME" style="-fx-text-fill: #555; -fx-font-size: 14px;"/>
                    <Label fx:id="incomeLabel"
                           style="-fx-text-fill: #27ae60; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>
            </StackPane>

            <StackPane HBox.hgrow="ALWAYS" prefHeight="80"
                       style="-fx-background-color: #fafafa; -fx-background-radius: 8;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="EXPENSE" style="-fx-text-fill: #555; -fx-font-size: 14px;"/>
                    <Label fx:id="expenseLabel"
                           style="-fx-text-fill: #e74c3c; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>
            </StackPane>

            <StackPane HBox.hgrow="ALWAYS" prefHeight="80"
                       style="-fx-background-color: #fafafa; -fx-background-radius: 8;">
                <VBox alignment="CENTER" spacing="5">
                    <Label text="NET" style="-fx-text-fill: #555; -fx-font-size: 14px;"/>
                    <Label fx:id="netLabel"
                           style="-fx-text-fill: #3498db; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                </VBox>
            </StackPane>
        </HBox>

        <!-- 图表行，左右各占一半 -->
        <HBox spacing="30" alignment="CENTER">
            <VBox HBox.hgrow="ALWAYS" prefHeight="380"
                  style="-fx-background-color: #fafafa; -fx-background-radius: 8; -fx-padding: 15;">
                <Label text="Income vs Expense Ratio"
                       style="-fx-font-size: 16px; -fx-padding: 0 0 10 0;"/>
                <PieChart fx:id="pieChart" VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox HBox.hgrow="ALWAYS" prefHeight="380"
                  style="-fx-background-color: #fafafa; -fx-background-radius: 8; -fx-padding: 15;">
                <Label text="Monthly Cash Flow"
                       style="-fx-font-size: 16px; -fx-padding: 0 0 10 0;"/>
                <BarChart fx:id="barChart" VBox.vgrow="ALWAYS">
                    <xAxis>
                        <CategoryAxis label="Category"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Amount ($)"/>
                    </yAxis>
                </BarChart>
            </VBox>
        </HBox>

    </VBox>

</AnchorPane>

