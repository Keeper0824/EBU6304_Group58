<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="20" vgap="20"
          xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml/1">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <Label text="Card Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"
           style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    <TextField fx:id="cardNumberField" GridPane.columnIndex="1" GridPane.rowIndex="0"
               style="-fx-font-size: 16pt; -fx-pref-width: 500; -fx-pref-height: 45;"/>

    <!-- 其他表单元素类似添加 -->

    <HBox spacing="30" alignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Button text="Add Card" onAction="#handleAddCard"
                style="-fx-font-size: 14pt; -fx-pref-width: 200; -fx-pref-height: 45;
                      -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Show Cards" onAction="#showTableView"
                style="-fx-font-size: 14pt; -fx-pref-width: 200; -fx-pref-height: 45;
                      -fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </HBox>
</GridPane>