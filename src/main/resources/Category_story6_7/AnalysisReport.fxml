<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.Category_story6_7.AnalysisReportController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-border-width: 1; -fx-border-color: #cccccc;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Budget Analysis Report" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
    <ScrollPane fitToWidth="true" pannable="true" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc;">
        <VBox fx:id="reportContent" alignment="TOP_LEFT" spacing="10" style="-fx-font-size: 20px;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="reportLabel" wrapText="true" style="-fx-text-fill: #333333;"/>
        </VBox>
    </ScrollPane>
    <Button text="Close" onAction="#handleClose" style="-fx-background-color: #ff4d4d; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px;"/>
</VBox>