<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.Category_story6_7.AddController" alignment="CENTER" spacing="10" prefWidth="400" prefHeight="350">
    <Label text="Transaction"/>
    <TextField fx:id="transactionField" prefWidth="300" maxWidth="300"/>
    <Label text="Price"/>
    <TextField fx:id="priceField" prefWidth="300" maxWidth="300"/>
    <Label text="Classification"/>
    <ComboBox fx:id="classificationField" prefWidth="300" maxWidth="300"/>
    <Label text="Date"/>
    <DatePicker fx:id="dateField" prefWidth="300" maxWidth="300"/>
    <Label text="Type(income/expense)"/>
    <ComboBox fx:id="IOTypeField" prefWidth="300" maxWidth="300"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>