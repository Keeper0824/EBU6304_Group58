<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.Category_story6_7.MainController" style="-fx-padding: 10; -fx-alignment: TOP_LEFT">

    <TableView fx:id="tableView" prefWidth="1600" prefHeight="850" style="-fx-font-size: 30;">
        <columns>
            <TableColumn text="Transaction" fx:id="transactionColumn" prefWidth="200" style="-fx-font-size: 30;"/>
            <TableColumn text="Price" fx:id="priceColumn" prefWidth="100" style="-fx-font-size: 30;"/>
            <TableColumn text="Classification" fx:id="classificationColumn" prefWidth="200" style="-fx-font-size: 30;"/>
            <TableColumn text="Date" fx:id="dateColumn" prefWidth="200" style="-fx-font-size: 30;"/>
            <TableColumn text="Type" fx:id="IOColumn" prefWidth="200" style="-fx-font-size: 30;"/>
            <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="100" style="-fx-font-size: 30;"/>
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Add" onAction="#handleAdd" style="-fx-font-size: 30;"/>
        <Button text="Delete" onAction="#handleDelete" style="-fx-font-size: 30;"/>
        <Button text="Refresh" onAction="#handleRefresh" style="-fx-font-size: 30;"/>
    </HBox>
</VBox>