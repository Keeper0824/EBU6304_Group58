<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="src.main.java.Category_story6_7.MainController" style="-fx-padding: 150">

    <ImageView fitWidth="1600" fitHeight="900" preserveRatio="false">
        <image>
            <Image url="@images/img.png"/>
        </image>
    </ImageView>

    <VBox alignment="CENTER" spacing="10" style="-fx-padding:20;">
    <TableView fx:id="tableView" prefWidth="800" prefHeight="500">
        <columns>
            <TableColumn text="Transaction" fx:id="transactionColumn" prefWidth="200"/>
            <TableColumn text="Price" fx:id="priceColumn" prefWidth="100"/>
            <TableColumn text="Classification" fx:id="classificationColumn" prefWidth="200"/>
            <TableColumn text="Date" fx:id="dateColumn" prefWidth="200"/>
            <TableColumn text="Type" fx:id="IOColumn" prefWidth="200"/>
            <TableColumn text="Actions" fx:id="actionsColumn" prefWidth="100"/>
        </columns>
    </TableView>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Add" onAction="#handleAdd"/>
        <Button text="Delete" onAction="#handleDelete"/>
        <Button text="Refresh" onAction="#handleRefresh"/>
    </HBox>
    </VBox>
</StackPane>