<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.transaction.AddController" alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">
    <Label text="Transaction"/>
    <TextField fx:id="transactionField"/>
    <Label text="Price"/>
    <TextField fx:id="priceField"/>
    <Label text="Classification"/>
    <TextField fx:id="classificationField"/>
    <Label text="Date"/>
    <TextField fx:id="dateField"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>