<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="src.main.java.LoginController">

        <!-- 背景图 -->
        <ImageView fx:id="bgImageView" preserveRatio="false" fitWidth="1600" fitHeight="900">
                <image>
                        <Image url="@/images/2.jpg" />
                </image>
        </ImageView>

        <!-- 半透明遮罩 -->
        <Pane style="-fx-background-color: rgba(255,255,255,0);" />

        <!-- 内容面板 -->
        <GridPane alignment="CENTER" hgap="20" vgap="30" style="-fx-background-color: rgba(255,255,255,0); -fx-background-radius: 15;" maxWidth="600" maxHeight="400">
                <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>

                <!-- 邮箱 -->
                <Label text="Email:" style="-fx-font-size: 22px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="emailField" promptText="Enter your email" style="-fx-font-size: 18px; -fx-pref-height: 40px;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- 密码 -->
                <Label text="Password:" style="-fx-font-size: 22px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-font-size: 18px; -fx-pref-height: 40px;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- 按钮 -->
                <Button text="Login" onAction="#handleLogin" style="-fx-font-size: 18px; -fx-pref-width: 120px; -fx-pref-height: 40px;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button text="Register" onAction="#handleRegister" style="-fx-font-size: 18px; -fx-pref-width: 120px; -fx-pref-height: 40px;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>

</StackPane>
